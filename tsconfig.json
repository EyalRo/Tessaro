{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "types": ["jest", "node", "@testing-library/jest-dom", "cors", "mime-types"],
    "baseUrl": ".",
    "paths": {
      "shared/libs/database": ["shared/libs/database/src"],
      "shared/libs/database/*": ["shared/libs/database/src/*"],
      "shared/libs/*": ["shared/libs/*/src", "shared/libs/*"],
      "shared/config/*": ["shared/config/*"],
      "@/*": ["services/admin-app/app/src/*"]
    }
  },
  "include": [
    "services/**/*.ts",
    "services/**/*.tsx",
    "services/**/*.d.ts",
    "shared/**/*.ts",
    "shared/**/*.tsx",
    "shared/**/*.d.ts",
    "platform/**/*.ts"
  ],
  "exclude": ["services/**/app/vite.config.ts"]
}
